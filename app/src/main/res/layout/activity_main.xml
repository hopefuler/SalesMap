<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.example.lkm.ms_termproject_001.MainActivity">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_top_bg"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:src="@drawable/smap_top"
                android:scaleType="centerCrop"></ImageView>

            <ImageButton
                android:id="@+id/main_top_menu_filter_btn"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:background="@drawable/main_top_menu_filter_btn"
                android:onClick="topMenuClick"></ImageButton>

            <ImageButton
                android:id="@+id/main_top_menu_left_btn"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:background="@drawable/main_top_menu_left_btn"
                android:onClick="topMenuClick"></ImageButton>
        </FrameLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ViewFlipper>

            <ToggleButton
                android:id="@+id/toggle_auto"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#00ff0000"
                android:textColor="#00ff0000" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="#00ff0000"
                android:onClick="mOnClick" />

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="#00ff0000"
                android:onClick="mOnClick" />
        </FrameLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="peace.listview.MainActivity">

        <TextView
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"

            android:background="#ffffff"
            android:dividerHeight="0px"
            android:divider="#ffffff"
>
        </ListView>
    </RelativeLayout>




</LinearLayout>
