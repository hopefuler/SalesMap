<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.example.lkm.ms_termproject_001.ReviewActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_top_bg"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:src="@drawable/smap_top"></ImageView>
        <ImageButton
            android:id="@+id/reviewWriteMoveBtn"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:background="@drawable/reviewwrite"></ImageButton>
        <ImageButton
            android:id="@+id/main_top_menu_left_btn"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_margin="12dp"
            android:background="@drawable/main_top_menu_left_btn"
            android:onClick="topMenuClick"></ImageButton>

    </FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reviewListView"></ListView>


</LinearLayout>


