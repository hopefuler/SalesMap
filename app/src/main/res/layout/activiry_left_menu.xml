<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="50dp"
        android:id="@+id/profile_layout"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#4A90E2"
        android:layout_marginBottom="-3dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:padding="10dp"
            android:src="@drawable/profile_null"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:text="아이유"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:id="@+id/profile_point"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:text="10200p"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/profile_mail"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:gravity="top|left"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:text="naver.com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_mainlist"/>
            <TextView
                android:id="@+id/main_list_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="목록보기"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_favorite"/>
            <TextView
                android:id="@+id/bookmark_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="즐겨찾기"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_point"/>
            <TextView
                android:id="@+id/point_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="적립내역"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_notification"/>
            <TextView
                android:id="@+id/alert_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="알림"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_map"/>
            <TextView
                android:id="@+id/map_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="지도 보기"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_regi"/>
            <TextView
                android:id="@+id/adjust_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="등록/수정"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leftmenu_menu_plus"/>
            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="로그 아웃"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


